<div class="container-fluid" >
<div class="row  text-center bg-bg-primary align-items-center justify-content-center " style="height:100vh"> 
<div class="w-auto py-2  border border-5 my-4 border-light" style="height:min-content">
<p class="text-light fw-bold">book</p>

<table class="table table-dark table-striped">
  <thead>
    <tr>
     
      <th class="text-light" scope="col">Author:</th>
      <th class="text-light"  scope="col">Pages:</th>
      <th class="text-light" scope="col">Title:</th>
      <th class="text-light" scope="col">Withdraw:</th>
 
    </tr>
  </thead>
  <tbody>
  
    <tr>
     <%= render @book %>
    </tr>
 
  </tbody>
</table>
<div class="d-inline-flex gap-3 ">
  <%= link_to "Edit this book", edit_book_path(@book), class:"btn btn-secondary" %> 
  <%= link_to "Back to books", books_path,class:"btn btn-secondary" %>
  <%= button_to "Destroy this book", @book, method: :delete, class:"btn btn-secondary"%>
</div>
</div>
</div>
</div>
