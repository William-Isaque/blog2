<div class="container  bg-dark">
<div class="row" > 
<p style="color: green"><%= notice %></p>

<h1 class="text-light">Books</h1>

<div  id="books">
<table class="table table-dark table-striped">
  <thead>
    <tr>
     
      <th class="text-light" scope="col">Author:</th>
      <th class="text-light"  scope="col">Pages:</th>
      <th class="text-light" scope="col">Title:</th>
      <th class="text-light" scope="col">Withdraw:</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr  id="<%= dom_id book %>">
      <%= render book %>
      
    </tr>
  <% end %>
  </tbody>
</table>
</div>

<%= link_to "New book", new_book_path %>
</div>
