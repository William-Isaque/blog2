<div class="container  bg-dark">
<div class="row" > 

<div class="alert alert-warning alert-dismissible fade show" role="alert">
<%= notice  %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<h1 class="text-light">Books</h1>

<div  id="books">
 <% if @books.present? %>
<table class="table table-dark table-striped">
  <thead>
    <tr>
     
      <th class="text-light" scope="col">Author:</th>
      <th class="text-light"  scope="col">Pages:</th>
      <th class="text-light" scope="col">Title:</th>
      <th class="text-light" scope="col">Withdraw:</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
 
  <% @books.each do |book| %>
    <tr id="<%= dom_id(book) %>">
   
      <%= render book %>
      <td class="">
    
    
        <%= link_to "Show this book", book_path(book) ,class:"btn btn-warning"%>
        
      </td>
    </tr>
    
     <% end %>
    
  


  </tbody>
</table>
 <% else %>
      <h5 class="text-light" style="text-shadow: 5px 5px 5px red;"> there are no books to display </h5> 
 
<% end %>
</div>
 <%= puts "-------------- #{@books.length}"%>
<%= link_to "New book", new_book_path ,class:"btn btn-warning" %>

</div>
